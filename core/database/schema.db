CREATE TABLE `customer` (
  `id` varchar(255) PRIMARY KEY,
  `name` varchar(255),
  `address` varchar(255), 
  `telephone` int,
  `expiry_date` datetime,
  `business_category` varchar(255),
  `service` varchar(255),
  `key_person_name` varchar(255),
  `key_person_dob` datetime,
  `key_person_hp` int,
  `created_at` timestamp,
  `updated_at` timestamp DEFAULT null
);

CREATE TABLE `bank_account` (
  `id` varchar(255) PRIMARY KEY,
  `id_customer` vachar,
  `number` int,
  `name` varchar(255) DEFAULT ""
);

CREATE TABLE `data_mandatory` (
  `id_customer` vachar,
  `deed_of_establishment` datetime,
  `npwp` int,
  `nib` int,
  `sk_menkumham` int,
  `IDcard_keeper` int,
  `agreement` int,
  `kyc_form` int,
  `bo_form` int,
  `client_risk_form` int
);

CREATE TABLE `log` (
  `id` int PRIMARY KEY AUTO_INCREMENT,
  `id_customer` vachar,
  `id_file` int,
  `created_at` timestamp,
  `message` text
);

CREATE TABLE `file` (
  `id` int PRIMARY KEY AUTO_INCREMENT,
  `id_customer` vachar,
  `name` varchar(255),
  `type` vachar,
  `file` longblob DEFAULT null,
  `created_at` timestamp,
  `updated_at` timestamp DEFAULT null
);

CREATE TABLE `board_of_director` (
  `id` varchar[pk],
  `name` varchar(255),
  `photo` longblob DEFAULT null,
  `npp` vachar,
  `role` vachar,
  `description` vachar
);

CREATE TABLE `notification` (
  `id` int PRIMARY KEY AUTO_INCREMENT,
  `id_customer` vachar,
  `id_bod` vachar,
  `created_at` timestamp,
  `message` text
);

CREATE TABLE `announcement` (
  `id` int PRIMARY KEY AUTO_INCREMENT,
  `id_user` vachar,
  `title` text,
  `content` text,
  `created_at` timestamp,
  `updated_at` timestamp DEFAULT null
);


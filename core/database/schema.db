CREATE TABLE `user` (
  `id` varchar(255) PRIMARY KEY,
  `email` varchar(255),
  `password` varchar(255),
  `name` varchar(255),
  `photo` longblob DEFAULT null,
  `npp` vachar,
  `role` varchar(255),
  `description` varchar(255),
  `is_notify` int DEFAULT 0
);
